
doctype html
html
  head
    title Registration
    // Bootstrap core CSS
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css', rel='stylesheet')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js')
    style.
      * { margin: 0px; padding: 0px; }
      body {
      font-size: 120%;
      background-image: url('images/11.png');
      background-size: cover;
      background-repeat: no-repeat;
      }
      .header {
      width: 40%;
      margin: 50px auto 0px;
      color: white;
      background: #FFC312;
      text-align: center;
      border: 1px solid #B0C4DE;
      border-bottom: none;
      border-radius: 10px 10px 0px 0px;
      padding: 20px;
      }
      form, .content {
      width: 40%;
      margin: 0px auto;
      padding: 20px;
      border: 1px solid #B0C4DE;
      background: white;
      border-radius: 0px 0px 10px 10px;
      }
      .input-group{
      margin: 10px 0px 10px 0px;
      }
      .input-group label {
      display: block;
      text-align: left;
      margin: 3px;
      }
      .input-group input {
      height: 30px;
      width: 93%;
      padding: 5px 10px;
      font-size: 16px;
      border-radius: 5px;
      border: 1px solid gray;
      }
      .input-group select {
      height: 30px;
      width: 95%;
      padding: 5px 10px;
      font-size: 16px;
      border-radius: 5px;
      border: 1px solid gray;
      }
      #user_type {
      height: 40px;
      width: 98%;
      padding: 5px 10px;
      background: white;
      font-size: 16px;
      border-radius: 5px;
      border: 1px solid gray;
      }
      .btn {
      padding: 10px;
      font-size: 15px;
      color: white;
      background: #FFC312;
      border: none;
      border-radius: 5px;
      }
      .error {
      width: 92%;
      margin: 0px auto;
      padding: 10px;
      border: 1px solid #a94442;
      color: #a94442;
      background: #f2dede;
      border-radius: 5px;
      text-align: left;
      }
      .success {
      color: #3c763d;
      background: #dff0d8;
      border: 1px solid #3c763d;
      margin-bottom: 20px;
      }
      .profile_info img {
      display: inline-block;
      width: 50px;
      height: 50px;
      margin: 5px;
      float: left;
      }
      .profile_info div {
      display: inline-block;
      margin: 5px;
      }
      .profile_info:after {
      content: "";
      display: block;
      clear: both;
      }
    script.
       function checkPassword(form) { 
       password1 = form.password_1.value; 
       password2 = form.password_2.value;              
       if (password1 == '') 
            alert ("Please enter Password");                  
                 
       else if (password2 == '') 
            alert ("Please enter confirm password");                      
                  
       else if (password1 != password2) { 
            alert ("\nPassword did not match: Please try again...") 
                return false; 
                 }              
       else{ 
            alert("Password Match: welcome to login") 
                return true; 
                 } 
           } 
    script.
      $(document).ready(function () {
        $(".mobile").keyup(function (e) {
          //alert(e.which)
          if(e.which==96) {
            $(".mobile").val("")
            $(".errmsg").html("please enter a valid number")
          }
          else{
            $(".errmsg").html("")
          }
         });
      });
  body
    .header
      h2 Register
    form(onSubmit = "return checkPassword(this)" method="post" action="registration")
      //.input-group
      label UserId
      input.form-control(type="text" name="id" value="" onKeypress='return event.charCode>=48 && event.charCode<=57' required minlength="4" maxlength="4")
      //.input-group
      label Username
      input.form-control(type="text" name="username"  value="" onKeypress='return event.charCode>=60 && event.charCode<=122'  required)
      //.input-group
      label Email
      input.form-control(type="email" name="email" value="" required)
      //.input-group
      label Role
      select.form-control(name='role')
        option(value='HOD') HOD
        option(value='Faculty') Faculty
      //.input-group
      label Password
      input.form-control(type="password" name="password_1"  required minlength="8" maxlength="16")
      //.input-group
      label Confirm password
      input.form-control(type="password" name="password_2" required)
      //.input-group
      label Mobile No.
      input.form-control(type="text" name="mobile" class="mobile" value="" onKeypress='return event.charCode>=48 && event.charCode<=57' minlength="10" maxlength="10" required)
      p(style='color:red').errmsg
      //.input-group
      label Department
      select.form-control(name='department')
        option(value='CSE') CSE
        option(value='IT') IT
        option(value='ECE') ECE
        option(value='EEE') EEE
        option(value='MECH') MECH
        option(value='PT') PT
        option(value='CIVIL') CIVIL
        option(value='AGRI') AGRI
      //.input-group
      label College
      select.form-control(name='college')
        option(value='AEC') AEC
        option(value='ACET') ACET
        option(value='ACE') ACE
      //.input-group
      button.btn(type="submit" value="submit" onClick="checkPassword()") Register
    p
      | Already a member? 
      a(href="/") Log in
