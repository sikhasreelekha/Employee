html
  head
    meta(charset="utf-8")
    title Transparent Login Form
    style(type="text/css").
      body
      {
      margin: 0;
      padding: 0;
      background: url('images/11.png');
      background-size: cover;
      font-family: sans-serif;
      }
      #admin{
      border-radius:15px;
      width:350px;
      height:420px;
      background: rgba(0,0,0,.5);
      top:50%;
      left:35%;
      position:absolute;
      transform:translate(-50%,-50%);
      box-sizing: border-box;
      padding:50px 30px;
      }
      .user
      {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      overflow: hidden;
      position: absolute;
      top: calc(-100px/2);
      left: calc(50% - 50px);
      }
      #student{
      width:350px;
      height:420px;
      background:rgba(0,0,0,0.5);
      border-radius:15px;
      top:50%;
      left:70%;
      position:absolute;
      transform:translate(-50%,-50%);
      box-sizing:border-box;
      padding:50px 30px;
      }
      h2
      {
      margin: 0;
      padding: 0 0 20px;
      color: #FFC312;
      text-align: center;
      }
      .LoginBox p
      {
      margin: 0;
      padding: 0;
      font-weight: bold;
      color: #BCEC9A;
      }
      .LoginBox input
      {
      width: 100%;
      margin-bottom: 20px;
      }
      .LoginBox input
      {
      border: none;
      border-bottom: 1px solid #fff;
      background: transparent;
      outline: none;
      height: 40px;
      color: #fff;
      font-size: 16px;
      }
      ::placeholder
      {
      color: rgba(255,255,255,.5);
      }
      .LoginBox input[type="submit"]
      {
      border: none;
      outline: none;
      height: 40px;
      color: #3B3D3B;
      font-size: 16px;
      background: #FFC312;
      cursor: pointer;
      border-radius: 20px;
      }
      .LoginBox input[type="submit"]:hover
      {
      background: #FFf;
      color: #3B3D3B;
      }
      .LoginBox a
      {
      color: #fff;
      font-size: 14px;
      font-weight: bold;
      text-decoration: none;
      }
  body
    #admin.LoginBox
      h2 Login
      form(method="post" action="/login")
        p Employee Id
        input(type="text" name="id" placeholder="Enter UserId")
        p Password
        input(type="password" name="password" placeholder="Enter password")
        input(type="submit" value="Login")
      p
        | Don't Have Account? 
        a(href="register")   Register
